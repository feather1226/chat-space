.LeftContents
  .LeftContents__Top
    .LeftContents__Awesome
      = link_to new_group_path, class:'LeftContents__Awesome--Pencil' do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_path(current_user.id), class:'LeftContents__Awesome--Gear' do
        %i.fa.fa-cog
    .LeftContents__Username
      = current_user.name
  .LeftContents__Bottom
    - @groups.each do |group|
      %a.LeftContents__Bottom--groupname
        =link_to group_messages_path(group) do
          = group.name
        .LeftContents__Bottom--groupname--message
          = hot_message(group)
